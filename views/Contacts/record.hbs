<h3 class="text-center">Contact Record</h3>
<br/>
<h2><a class="btn btn-secondary" href="/contactlist"><i class="fa fa-plus"></i> Create New </a></h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name/Category</th>
      <!-- <th>Email</th> -->
      <th>Phone</th>
      <th>Country</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    {{#each list}}
    <tr>
      <td>{{this.Name}}</td>
      <!-- <td>{{this.email}}</td> -->
      <td>{{this.phone}}</td>
      <td>{{this.country}}</td>
      <td><a href="/contactlist/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
        <a href="/contactlist/delete/{{this._id}}" onclick="return confirm('Are you sure you want to delete this item?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
