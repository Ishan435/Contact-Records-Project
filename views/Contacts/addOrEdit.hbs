<h3>{{viewTitle}}</h3>


<form autocomplete="off" action="/contactlist" method="post">
  <input type="hidden" name="_id" value="{{cl._id}}">
  <div class="form-group">
    <label>Full Name</label>
    <input type="text" name="fullName" class="form-control" placeholder="Full Name" value="{{cl.fullName}}">
    <div class="text-danger">
      {{cl.fullNameError}}
    </div>
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="text" name="email" class="form-control" placeholder="Email Address" value="{{cl.email}}">
    <div class="text-danger">
      {{cl.emailError}}
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label>Mobile</label>
      <input type="text" name="mobile" class="form-control" placeholder="Mobile" value="{{cl.mobile}}">
    </div>
    <div class="form-group col-md-6">
      <label>City</label>
      <input type="text" name="city" class="form-control" placeholder="City" value="{{cl.city}}">
    </div>
    </div>

    <div class="form-group">
      <button type="submit" name="button" class="btn btn-info"><i class="fa fa-database"></i>  Submit</button>
      <a href="/contactlist/record" class="btn btn-secondary"><i class="fa fa-list-alt"></i>  View All Contacts</a>
    </div>
</form>
